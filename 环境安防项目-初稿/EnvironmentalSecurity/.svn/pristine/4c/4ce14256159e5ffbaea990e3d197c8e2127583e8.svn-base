                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Button Name="btnDefault" Grid.Column="0" Style="{StaticResource ButtonStyle}"  Width="100" Height="30"  Click="BtnDefault_OnClick" >
